
{
  "version": 2,
  "buildCommand": "npm install && npm run build",
  "installCommand": "npm install",
  "outputDirectory": "dist",
  "functions": {
    "vercel/api/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/healthcheck", "dest": "/vercel/api/healthcheck.ts" },
    { "src": "/api/debug-db", "dest": "/vercel/api/debug-db.ts" },
    { "src": "/api/(.*)", "dest": "/vercel/api/index.ts" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
